  <div class="container">
  <% if @user.errors.any? %>
  
  <div class="error-explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
